<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4sp"
    app:cardElevation="0sp"
    app:cardMaxElevation="0sp"
    app:rippleColor="@color/ripple_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4sp"
    android:layout_marginBottom="4sp"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    app:cardBackgroundColor="@color/backgroundColor"
    android:background="?selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/macAddressTextView">
            <LinearLayout
                android:padding="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hostNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pramod's Android"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="5sp"
                    android:id="@+id/yourDevice"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Your device)"
                    android:textSize="12sp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/ipAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.68.10.10"
                android:textColor="@android:color/white"
                android:padding="5sp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/vendorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:padding="5sp"
                android:text="Google Inc"
                android:ellipsize="marquee"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/macAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:textAllCaps="true"
            android:text="02:00:00:00:00:00"
            android:textSize="12sp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
