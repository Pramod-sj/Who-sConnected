<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="?android:attr/windowBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/toolbarNavigationButton"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="5sp"
        android:visibility="gone"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="?attr/actionBarItemBackground"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/toolbartext"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/toolbarNavigationButton"
        android:layout_toLeftOf="@id/toolbarOptionMenuButton"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:text="Title"
        android:background="@android:color/transparent"
        android:textSize="25sp"
        android:drawablePadding="5sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:gravity="start|left"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"/>
    <ImageButton
        android:id="@+id/toolbarOptionMenuButton"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:visibility="gone"
        android:layout_height="32dp"
        android:layout_marginLeft="5sp"
        android:background="?attr/actionBarItemBackground"/>
</RelativeLayout>